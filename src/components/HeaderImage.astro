---
const { image }: { image: { url: string; alt: string } } = Astro.props;
---

<header class="prose mx-auto my-5 aspect-600/300">
  <img
    src={image?.url ?? 'https://picsum.photos/600/300'}
    alt={image?.alt ?? 'just a random image from lorem picsum'}
    title={image?.alt ?? 'just a random image from lorem picsum'}
    class="mx-auto"
  />
</header>
